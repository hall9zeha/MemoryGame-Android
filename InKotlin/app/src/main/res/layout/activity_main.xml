<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.MainActivity"
    android:background="?attr/colorSurface"
    android:padding="@dimen/common_padding_micro"
    >
 <com.google.android.material.imageview.ShapeableImageView
     android:layout_width="90dp"
     android:layout_height="90dp"
     android:id="@+id/ivMain"
     android:src="@drawable/aleph"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintEnd_toEndOf="parent"
     app:layout_constraintBottom_toTopOf="@id/btnEasy"
    android:layout_marginBottom="@dimen/common_padding_max"
     android:layout_marginTop="@dimen/common_padding_default"/>

 <com.google.android.material.button.MaterialButton
     android:layout_width="200dp"
     android:layout_height="wrap_content"
     android:id="@+id/btnEasy"
     android:text="Facil"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintEnd_toEndOf="parent"

     app:layout_constraintBottom_toTopOf="@id/btnMedium"
     android:layout_marginTop="@dimen/common_padding_max"/>
 <com.google.android.material.button.MaterialButton
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:id="@+id/btnMedium"
    android:text="Medio"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
     app:layout_constraintBottom_toBottomOf="parent"
    android:layout_marginTop="@dimen/common_padding_min"/>
 <com.google.android.material.button.MaterialButton
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:id="@+id/btnHard"
    android:text="Dificil"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@id/btnMedium"
    android:layout_marginTop="@dimen/common_padding_min"
    />
</androidx.constraintlayout.widget.ConstraintLayout>